{
  "info": {
    "name": "GramConnect API",
    "description": "Civic Issues Management System API Collection",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phoneNumber\": \"+919876543210\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Generate OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"+919876543210\",\n  \"type\": \"PHONE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/otp/generate",
              "host": ["{{base_url}}"],
              "path": ["auth", "otp", "generate"]
            }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"+919876543210\",\n  \"type\": \"PHONE\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/otp/verify",
              "host": ["{{base_url}}"],
              "path": ["auth", "otp", "verify"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/users/me",
              "host": ["{{base_url}}"],
              "path": ["users", "me"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"district\": \"Chennai\",\n  \"panchayat\": \"Tambaram\",\n  \"village\": \"Perungalathur\",\n  \"ward\": \"Ward 1\",\n  \"homeAddress\": \"123 Main Street\",\n  \"aadhaarNumber\": \"123456789012\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/me",
              "host": ["{{base_url}}"],
              "path": ["users", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Complaints",
      "item": [
        {
          "name": "Create Complaint",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"category\": \"GARBAGE\",\n  \"description\": \"Garbage not collected for 3 days in our area\",\n  \"district\": \"Chennai\",\n  \"panchayat\": \"Tambaram\",\n  \"village\": \"Perungalathur\",\n  \"ward\": \"Ward 1\",\n  \"lat\": 12.9716,\n  \"lng\": 77.5946\n}"
            },
            "url": {
              "raw": "{{base_url}}/complaints",
              "host": ["{{base_url}}"],
              "path": ["complaints"]
            }
          }
        },
        {
          "name": "Get User Complaints",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/complaints/user",
              "host": ["{{base_url}}"],
              "path": ["complaints", "user"]
            }
          }
        },
        {
          "name": "Get Complaint Details",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/complaints/{{complaint_id}}",
              "host": ["{{base_url}}"],
              "path": ["complaints", "{{complaint_id}}"]
            }
          }
        },
        {
          "name": "Update Complaint Status (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"IN_PROGRESS\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/complaints/{{complaint_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["complaints", "{{complaint_id}}", "status"]
            }
          }
        },
        {
          "name": "Send Reminder",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/complaints/{{complaint_id}}/reminder",
              "host": ["{{base_url}}"],
              "path": ["complaints", "{{complaint_id}}", "reminder"]
            }
          }
        }
      ]
    },
    {
      "name": "Garbage Schedules",
      "item": [
        {
          "name": "Get Schedules",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/schedules?district=Chennai&village=Perungalathur",
              "host": ["{{base_url}}"],
              "path": ["schedules"],
              "query": [
                {
                  "key": "district",
                  "value": "Chennai"
                },
                {
                  "key": "village",
                  "value": "Perungalathur"
                }
              ]
            }
          }
        },
        {
          "name": "Create Schedule (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"district\": \"Chennai\",\n  \"panchayat\": \"Tambaram\",\n  \"village\": \"Perungalathur\",\n  \"ward\": \"Ward 1\",\n  \"days\": [\"MON\", \"WED\", \"FRI\"],\n  \"time\": \"07:00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/schedules",
              "host": ["{{base_url}}"],
              "path": ["schedules"]
            }
          }
        }
      ]
    },
    {
      "name": "Missed Pickups",
      "item": [
        {
          "name": "Report Missed Pickup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"scheduleId\": \"{{schedule_id}}\",\n  \"village\": \"Perungalathur\",\n  \"note\": \"Garbage truck did not come today\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/missed-pickups",
              "host": ["{{base_url}}"],
              "path": ["missed-pickups"]
            }
          }
        },
        {
          "name": "Get My Missed Pickups",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/missed-pickups/my",
              "host": ["{{base_url}}"],
              "path": ["missed-pickups", "my"]
            }
          }
        }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {
          "name": "Get Notifications",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/notifications",
              "host": ["{{base_url}}"],
              "path": ["notifications"]
            }
          }
        },
        {
          "name": "Mark as Read",
          "request": {
            "method": "PATCH",
            "url": {
              "raw": "{{base_url}}/notifications/{{notification_id}}/read",
              "host": ["{{base_url}}"],
              "path": ["notifications", "{{notification_id}}", "read"]
            }
          }
        },
        {
          "name": "Get Unread Count",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/notifications/unread/count",
              "host": ["{{base_url}}"],
              "path": ["notifications", "unread", "count"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Seed Super Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@gramconnect.com\",\n  \"password\": \"Admin@123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admins/seed",
              "host": ["{{base_url}}"],
              "path": ["admins", "seed"]
            }
          }
        },
        {
          "name": "Create Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"District Admin\",\n  \"email\": \"district.admin@gramconnect.com\",\n  \"password\": \"Admin@123\",\n  \"assignedDistrict\": \"Chennai\",\n  \"assignedPanchayat\": \"Tambaram\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admins",
              "host": ["{{base_url}}"],
              "path": ["admins"]
            }
          }
        },
        {
          "name": "Get All Admins",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/admins",
              "host": ["{{base_url}}"],
              "path": ["admins"]
            }
          }
        }
      ]
    }
  ]
}